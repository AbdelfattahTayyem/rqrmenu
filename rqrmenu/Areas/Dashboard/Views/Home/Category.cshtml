@model IEnumerable<rqrmenu.Areas.Dashboard.Models.Category>;
@{
    ViewData["Title"] = "categories";
}

<div class="container mt-5">
    <h3 class="mb-4">Categories LIST</h3>
    <!-- Search Bar -->
    <div class="row mb-3">
        <div class="col-md-4">
            <a asp-action="add_category"><button type="button" class="btn btn-light">ADD</button></a>
        </div>
    </div>

    <!-- Categories Table -->
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th> ID</th>
                <th>Categories Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var cat in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => cat.Id)</td>
                    <td>@Html.DisplayFor(modelItem => cat.Name)</td>
                    @if (!string.IsNullOrEmpty(cat.Img))
                    {
                        <td><img src="@Url.Content("~/images/" + cat.Img)" alt="Category Image" style="width: 60px; height: 65px;" /></td>
                    }
                    else
                    {
                         <td><span>No Image</span></td>
                    }
                    <td>
                        <a asp-action="Edit_Cat" asp-route-id="@cat.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete_Cat" asp-route-id="@cat.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
           
            }

            <!-- Add more rows as needed -->
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="row">
        <div class="col-md-6">
            <p>Showing 1 to 10 of 36 entries</p>
        </div>
        <div class="col-md-6 text-end">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
