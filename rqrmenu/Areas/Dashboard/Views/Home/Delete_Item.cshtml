@model rqrmenu.Areas.Dashboard.Models.Item

@{
    ViewData["Title"] = "Delete_Item";
}

<div class="container mt-5">
    <h3>Delete Item</h3>
    <p>Are you sure you want to delete this item?</p>

    <div>
        <strong>ID:</strong> @Model.Id <br />
        <strong>Name:</strong> @Model.Name <br />
        <strong>Category:</strong> @Model.Category.Name <br />
        <strong>Price:</strong> @Model.Price <br />
        <strong>Currency:</strong> @Model.Currency <br />
        <strong>Description:</strong> @Model.Description <br />
        <strong>Image:</strong> <img src="~/images/@Model.Image" alt="@Model.Name" style="width: 100px; height: auto;" />
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Items" class="btn btn-secondary">Cancel</a>
    </form>
</div>
