@model IEnumerable<rqrmenu.Areas.Dashboard.Models.Order>

@{
    ViewData["Title"] = "order";
}


<div class="container mt-5">
    <h3 class="mb-4">Order LIST</h3>
    <!-- Search Bar -->
    <!-- Item Table -->
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer Name</th>
                <th>Item ID</th>
                <th>Table ID</th>
                <th>Order Date</th>
                <th>Quantity </th>
                <th>Status </th>
                <th>Total </th>
                <th>User Id </th>
                <th>Action</th>
                
                
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => order.Id)</td>
                    <td>@(order.CustomerName ?? "N/A")</td>
                    <td>@Html.DisplayFor(modelItem => order.ItemId)</td>
                    <td>@Html.DisplayFor(modelItem => order.TableId)</td>
                    <td>@Html.DisplayFor(modelItem => order.OrderDate)</td>
                    <td>@Html.DisplayFor(modelItem => order.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => order.Status)</td>
                    <td>@Html.DisplayFor(modelItem => order.TotalAmount)</td>
                    <td>@(order.UserId.HasValue ? order.UserId.ToString() : "N/A")</td>
                   
                    <td>
                        <a asp-action="Edit_Order" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete_Order" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>

            }

            <!-- Add more rows as needed -->
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="row">
        <div class="col-md-6">
            <p>Showing 1 to 10 of 36 entries</p>
        </div>
        <div class="col-md-6 text-end">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>


