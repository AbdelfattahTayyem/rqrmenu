@model IEnumerable<rqrmenu.Areas.Dashboard.Models.Table>;
@{
    ViewData["Title"] = "table";
}

<div class="container mt-5">
    <h3 class="mb-4">Table LIST</h3>
    <!-- Search Bar -->
    <div class="row mb-3">
        <div class="col-md-4">
            <a href="add_table"><button type="button" class="btn btn-light">ADD Table</button></a>
        </div>
    </div>

    <!-- Item Table -->
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>table ID</th>
                <th>table Number</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var table in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => table.Id)</td>
                    <td>@Html.DisplayFor(modelItem => table.TableNumber)</td>
                </tr>
            }

            <!-- Add more rows as needed -->
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="row">
        <div class="col-md-6">
            <p>Showing 1 to 10 of 36 entries</p>
        </div>
        <div class="col-md-6 text-end">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>



